<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="378.0" prefWidth="357.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="32.0" prefWidth="283.0" text="Curreny Converter" textAlignment="CENTER">
      <font>
         <Font size="22.0" />
      </font>
   </Label>
   <ComboBox fx:id="sourceCurrencyComboBox" prefWidth="150.0" promptText="Select Currency 1" />
   <ComboBox fx:id="targetCurrencyComboBox" prefWidth="150.0" promptText="Select Currency 2" />
   <TextField fx:id="amountField" alignment="TOP_CENTER" promptText="Enter Your Amount" />
   <Button fx:id="convertButton" mnemonicParsing="false" onAction="#handleConvertButtonAction" text="Convert">
      <font>
         <Font size="15.0" />
      </font></Button>
   <TextField fx:id="convertedAmountField" alignment="TOP_CENTER" promptText="Outcome" />
</VBox>
